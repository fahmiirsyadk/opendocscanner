{
  "name": "opendocscanner",
  "version": "1.0.0",
  "description": "PureScript document scanner and image manipulation tool",
  "scripts": {
    "dev:ps": "spago build --watch",
    "dev": "run-p dev:ps front",
    "front": "npx vite",
    "build": "node build.js",
    "tidy": "purs-tidy format-in-place src test",
    "preview": "npx vite preview",
    "clean": "rm -rf dist output"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "purescript": "^0.15.15",
    "purs-tidy": "^0.11.0",
    "spago": "^0.21.0",
    "vite": "^7.1.7",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "dependencies": {
    "pdfjs-dist": "^5.4.149"
  }
}
